# Auth mode: none | builtin | proxy | oidc
AUTH_MODE=none

# Required for builtin/oidc auth modes
JWT_SECRET=dev-secret-change-me

# Builtin auth: seeds an "admin" user on first start
LOGIN_PASSWORD=admin123

# API key auth (optional, works in all modes)
# API_KEY=your-api-key-here

# OIDC auth (only needed when AUTH_MODE=oidc)
# OIDC_ISSUER=https://auth.example.com
# OIDC_CLIENT_ID=thingstodo
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_REDIRECT_URI=http://localhost:2999/api/auth/oidc/callback
