# General
# Must match the container port in docker, not the potentially changed port in docker-compose.yml
PORT=2999
LOG_LEVEL=info
MAX_UPLOAD_SIZE=26214400

# Auth: builtin | proxy | oidc
AUTH_MODE=builtin

# builtin only
JWT_SECRET=change-me-to-a-random-string
LOGIN_PASSWORD=
API_KEY=

# proxy only
AUTH_PROXY_HEADER=Remote-User

# oidc only (AUTH_MODE=oidc)
# OIDC_ISSUER=https://auth.example.com
# OIDC_CLIENT_ID=
# OIDC_CLIENT_SECRET=
# OIDC_REDIRECT_URI=https://tasks.example.com/api/auth/oidc/callback
